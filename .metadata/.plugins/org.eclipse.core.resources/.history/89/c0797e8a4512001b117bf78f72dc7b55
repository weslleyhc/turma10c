package variaveis;

public class ManipulaString {
	
	public static void main(String[] args) {
	
		String email = "regiNA@gaMa.aCaDemy";
		System.out.println("Original: " + email);
		System.out.println("Minuscula: " + email.toLowerCase());
		System.out.println("Maiuscula: " + email.toUpperCase());
		System.out.println("Qtde de caracteres: " + email.length());
		System.out.println("Posição do @: " + email.indexOf("@"));
		System.out.println("Exibir do 2º até o 4º: " + email.substring(1,4));
		System.out.println("So 3º em diante: " + email.substring(2));
		System.out.println("Primeira metade: " + email.substring(0, email.length()/2));
		// Exibir o usuário do email
		System.out.println("Exibir depois do @: " + email.substring(email.indexOf("@")));
		System.out.println("Exibir antes do @: " + email.substring(0,email.indexOf("@")));
		
}
}
