package variaveis;

import javax.swing.JOptionPane;

public class Notas {
	public static void main(String[] args) {
		// Input => nome, disciplina, duas notas
		// Exibir o nome do aluno, a média e a disciplina
		
		String nome = JOptionPane.showInputDialog("Digite seu nome");
		String disciplina1 = JOptionPane.showInputDialog("Digita a primeira disciplina");
		double nota1 = Double.parseDouble(JOptionPane.showInputDialog("Informa a primeira nota"));
		String disciplina2 = JOptionPane.showInputDialog("Digite a segunda disciplina");
		double nota2 = Double.parseDouble(JOptionPane.showInputDialog("Digite a segunda nota"));
		
		System.out.println("Nome do aluno: " + nome);
		System.out.println("Disciplina 1: " + disciplina1 + "Nota 1: " + nota1);
		System.out.println("Disciplina 2: " + disciplina1 + "Nota 2: " + nota2);
		System.out.println("Média das notas: " + (nota1/nota2));
	}
}
